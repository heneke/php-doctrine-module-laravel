<phpunit>
    <testsuites>
        <testsuite>
            <directory suffix="Test.php">src/test/php</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>src/main</directory>
        </whitelist>
        <blacklist>
            <directory>test</directory>
            <directory>vendor</directory>
        </blacklist>
    </filter>
    <logging>
        <log type="coverage-html" target="reports/coverage" />
    </logging>
</phpunit>